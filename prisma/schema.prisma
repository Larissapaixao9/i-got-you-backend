generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  created_at DateTime  @default(now())
  essays     Essay[]
  session    Session[]

  @@map("users")
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String
  is_on     Boolean  @default(true)
  create_at DateTime @default(now())
  email     String
  user      User     @relation(fields: [email], references: [email])

  @@map("sessions")
}

model Essay {
  id         Int      @id @default(autoincrement())
  texts      String
  user_id    Int
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_id], references: [id])

  @@map("essays")
}

model Word {
  id           Int      @id @default(autoincrement())
  good_mood    String
  bad_mood     String
  neutral_mood String
  created_at   DateTime @default(now())

  @@map("words")
}
